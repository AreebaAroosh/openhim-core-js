{
  "mongo": {
    "url": "mongodb://localhost/openhim-test",
    "atnaUrl": "mongodb://localhost/openhim-test"
  },
  "logger": {
    "level": "debug"
  },
  "api": {
    "enabled" : true,
    "httpsPort": 8080,
    "authWindowSeconds": 10,
    "truncateSize": 10,
    "truncateAppend": "\n[truncated ...]"
  },
  "statsd": {
    "enabled": true,
    "host": "localhost"
  },
  "application": {
    "name": "openhim.test"
  },
  "caching": {
    "enabled": false
  },
  "agenda": {
    "startupDelay": 0
  },
  "certificateManagement": {
    "watchFSForCert": true,
    "certPath": "test/resources/certificate-watcher/test.crt",
    "keyPath": "test/resources/certificate-watcher/test.key"
  }
}
