{
  "router": {
    "httpPort": 5001,
    "httpsPort": 5000
  },
  "api": {
    "httpPort": 8080
  },
  "authentication": {
    "enableMutualTLSAuthentication": false,
    "enableBasicAuthentication": true
  },
  "nodemailer": {
    "service": "Gmail",
    "auth": {
        "user": "gmail.user@gmail.com",
        "pass": "userpass"
    }
  },
  "smsGateway": {
    "provider": "clickatell",
	"config": {
      "user": "user",
      "pass": "pass",
      "apiId": "apiId"
    }
  },
  "alerts": {
    "enableAlerts": true,
    "pollPeriodMinutes": 60
  }
}
